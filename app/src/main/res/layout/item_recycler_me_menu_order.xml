<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/item_recycler_me_menu_item" />

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@android:color/white"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_wait_pay"
            style="@style/meMenuStyle"
            android:drawableTop="@mipmap/icon_me_wait_pay1"
            android:text="待付款" />

        <Button
            android:id="@+id/btn_wait_send"
            style="@style/meMenuStyle"
            android:drawableTop="@mipmap/icon_me_wait_send"
            android:text="待付款" />

        <Button
            android:id="@+id/btn_wait_receive"
            style="@style/meMenuStyle"
            android:drawableTop="@mipmap/icon_me_wait_receive"
            android:text="待收货" />

        <Button
            android:id="@+id/btn_wait_rate"
            style="@style/meMenuStyle"
            android:drawableTop="@mipmap/me_icon_wait_rate"
            android:text="待收货" />


    </LinearLayout>


</LinearLayout>